<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%=title%></title>
    <link rel="stylesheet" href="/assets/styleSignup.css">
    <link rel="stylesheet" href="/assets/nav.css">
    <link rel="stylesheet" href="/assets/footer.css">
  </head>
  <body>
    <div class="container">
      <% include partials/nav %>
    <h1>Sign Up Form</h1>
    <br>
    <% if (errMsg) { %>
      <h3> <%=errMsg%> </h3>
      <% } %>


    <div class="form">

      <form class="" action="/signup" method="post" required>
        <input type="text" name="first_name" value="" placeholder="First Name .. " required>
        <input type="text" name="second_name" value="" placeholder="Second Name .. " required>
        <input type="text" name="username" value="" placeholder="User Name .. " required>
        <input type="password" name="password" value="" placeholder="Password .. " required>
        <input type="email" name="email" value="" placeholder="Email .. " required>
        <input type="submit"  value="Sign Up">

      </form>

    </div>




    </div>

    <%include partials/footer %>
  </body>
</html>
